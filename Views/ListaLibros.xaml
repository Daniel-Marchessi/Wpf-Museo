<Window x:Class="Museoapp.Views.ListaLibros"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Museoapp.Views"
      mc:Ignorable="d" 
       Icon="../ico/Libros.ico"
        Title="Libros"  MinWidth="1100" MinHeight="600" WindowStartupLocation="CenterScreen"   ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="../img/biblioteca.png" />
    </Window.Background>

    <Grid>
        <ListView x:Name="listView" Margin="100">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titulo" DisplayMemberBinding="{Binding Titulo}"  />
                    <GridViewColumn Header="Origen" DisplayMemberBinding="{Binding Origen}"  />
                    <GridViewColumn Header="Numpaginas" DisplayMemberBinding="{Binding N_paginas}"  />
                    <GridViewColumn Header="Descripcion" DisplayMemberBinding="{Binding Descripcion}"  />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
