<Window x:Class="WpfAppTEST.Views.Coleccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTEST.Views"
        mc:Ignorable="d"
        Title="Coleccion"  MinWidth="1200" MinHeight="800" WindowStartupLocation="CenterScreen">
	<!--WindowStyle="None"-->
	<Window.Background>
		<ImageBrush ImageSource="E:\TESIS\Colecciones.jpg" />
	</Window.Background>

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition  Width="Auto" />
				<ColumnDefinition />
				<ColumnDefinition  Width="Auto"  />
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<Label Content="Nombre" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="50,50,5,0" FontWeight="Bold" Foreground="#FFF1F1F1"  FontSize="24"/>
			<TextBox x:Name="Nombre" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,50,50,0"   MaxWidth="500"  FontSize="24"/>

			<Label x:Name="Cantidad" Content="Cantidad" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Cantidad1" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"   MaxWidth="500" FontSize="24"/>

			<Label x:Name="Periodo" Content="Periodo" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Periodo1" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"   MaxWidth="500" FontSize="24"/>

			<Label x:Name="Alto" Content="Alto" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Alto1" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"   MaxWidth="500" FontSize="24"/>

			<Label x:Name="Ancho" Content="Ancho" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Ancho1" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"   MaxWidth="500" FontSize="24"/>

			<Label x:Name="Diametro" Content="Diametro" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Diametro1" Grid.Row="5" Grid.Column="1"  Grid.ColumnSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Margin="5,30,50,0"  MaxWidth="500" FontSize="24"/>

			<Label x:Name="Integridad" Content="Integridad" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,50,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Integridad1" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,50,50,0"  MaxWidth="500" FontSize="24"/>

			<Label x:Name="Ingreso" Content="Ingreso" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Ingreso1" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Margin="5,30,50,0"  MaxWidth="500" FontSize="24"/>

			<Label x:Name="Conservacion" Content="Conservacion" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Conservacion1" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Margin="5,30,50,0" MaxWidth="500" FontSize="24"/>

			<Label x:Name="Ubicacion" Content="Ubicacion" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Ubicacion1" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"  MaxWidth="500" FontSize="24"/>

			<Label x:Name="Alias" Content="Alias" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Alias1" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0"  MaxWidth="500" FontSize="24"/>

			<Label x:Name="LugarProc" Content="Lugar" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Lugarprocedencia" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,30,50,0" MaxWidth="500" FontSize="24"/>

			<Label x:Name="Imagen" Content="Imagen" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,0" FontWeight="Bold" Foreground="#FFF1F1F1" FontSize="24"/>
			<TextBox x:Name="Diametro1_Copy" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Margin="5,30,50,0" MaxWidth="500"  FontSize="24"/>

			<Button x:Name="EnviarColeccion"  Grid.ColumnSpan="2" Content="Enviar" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30" Height="53" Width="220" Click="EnviarColeccion_Click_1"/>
			
		</Grid>
	</ScrollViewer>
</Window>