<Window x:Class="Museo.Views.EditarLibro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Museo.Views" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Editar" Height="450" Width="800">
    <Grid Background="#7182B3">
        <Label Content="Titulo" HorizontalAlignment="Left" Height="29" Margin="84,35,0,0" VerticalAlignment="Top" Width="94" Foreground="White"/>
        <TextBox x:Name="Titulo"  HorizontalAlignment="Left" Height="42" Margin="56,85,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="186" />
        <Label Content="Origen" HorizontalAlignment="Left" Margin="347,34,0,0" Width="106" Foreground="White" Height="30" VerticalAlignment="Top"/>
        <TextBox x:Name="Origen" HorizontalAlignment="Left" Height="42" Margin="307,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <Label Content="Número de páginas" HorizontalAlignment="Left" Height="30" Margin="573,35,0,0" VerticalAlignment="Top" Width="139" Foreground="White"/>
        <TextBox x:Name="N_paginas" HorizontalAlignment="Left" Height="42" Margin="551,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <Label Content="Descripcion" HorizontalAlignment="Left" Height="30" Margin="84,158,0,0" VerticalAlignment="Top" Width="94" Foreground="White"/>
        <TextBox x:Name="Descripcion" HorizontalAlignment="Left" Height="42" Margin="56,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <!--  <Label Content="Autores" HorizontalAlignment="Center" Height="30" Margin="0,158,0,0" VerticalAlignment="Top" Width="186" Foreground="White"/>
        <TextBox x:Name="Autores" HorizontalAlignment="Center" Height="42" Margin="0,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
       -->

        <Label Content="Edicion" HorizontalAlignment="Left" Height="30" Margin="598,158,0,0" VerticalAlignment="Top" Width="92" Foreground="White"/>
        <TextBox x:Name="Edicion" HorizontalAlignment="Left" Height="42" Margin="551,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <Label Content="Año de Edición" HorizontalAlignment="Left" Height="30" Margin="84,270,0,0" VerticalAlignment="Top" Width="94" Foreground="White"/>
        <TextBox x:Name="AnioEdicion" HorizontalAlignment="Left" Height="42" Margin="56,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <Label Content="Codigo" HorizontalAlignment="Left" Height="30" Margin="347,267,0,0" VerticalAlignment="Top" Width="106" Foreground="White"/>
        <TextBox x:Name="Codigo" HorizontalAlignment="Left" Height="42" Margin="307,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>

        <Button Content="Guardar"  Background="#FFFD9A0D" HorizontalAlignment="Left" Height="50" Margin="601,378,0,0" VerticalAlignment="Top" Width="136" Click="Enviar" />
        <TextBox x:Name="id_libro" Visibility="Hidden"  IsReadOnly="True" HorizontalAlignment="Left" Height="42" Margin="38,382,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="186" />
        <Label Content="Autores12" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFF1F1F1" Height="37" Width="90" Margin="347,158,0,0" RenderTransformOrigin="0.5,0.5" >

        </Label>
        <xctk:CheckComboBox x:Name="Autores12"
                    Margin="307,205,0,0"
                    FontSize="30"
                    MaxWidth="500" 
                    FontWeight="Black"
                    Foreground="Black"
                     DisplayMemberPath="id_autor"
                    ValueMemberPath="id_autor"
                    SelectedValue="{Binding SelectedValue}"
                    SelectedItemsOverride="{Binding SelectedItems}" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="186"
            />


    </Grid>


</Window>
