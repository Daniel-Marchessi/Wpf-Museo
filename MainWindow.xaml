<Window x:Class="WpfAppTEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTEST"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1000"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">



    <Border CornerRadius="10"
          Background="GhostWhite">

        <Grid Name="Principal"
          Background="Transparent">
            <!--HEADER -->

            <Grid Name="Header"
              Height="35"
              Background="Transparent"
              VerticalAlignment="Top">
                <Border
                Background="WhiteSmoke"
                CornerRadius="10,10,0,0"/>


                <Grid>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Button  Width="50px"
                             Height="35px"
                             Margin="0 0 5 0"
                             HorizontalAlignment="Right"
                            BorderBrush="Transparent"
                            Background="Transparent"
                       Grid.Column="2">



                        <TextBlock
                            
                            Text="X"
                            FontSize="25px"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                    </Button>


                </Grid>




            </Grid>


            <Grid Height="570"
                  VerticalAlignment="Top"
                  Background="SteelBlue" Margin="0,35,0,0"
                  
                  >
               
                    

                
               
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="974*"/>
                    <ColumnDefinition Width="27*"/>
                </Grid.ColumnDefinitions>

               
                        
                   
                    <Grid Background="CornflowerBlue" Height="300" Width="500
                      ">
                    <Border CornerRadius="20" BorderBrush="#FFDE3434">
                        <Button Content="Enviar" HorizontalAlignment="Left" Height="29" Margin="152,195,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click"/>

                    </Border>
                   
                        
                    
                </Grid>
                   
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top" 
                           Margin="386,239,0,0" RenderTransformOrigin="-1.073,-0.188"
                           Text="Usuario"
                           FontSize="15px"
                           FontWeight="Bold"
                           >

                </TextBlock>

                <TextBox x:Name="UsuarioText" Margin="491,286,260,266"  Height="18px"/>
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top" 
                           Margin="386,285,0,0" RenderTransformOrigin="-1.073,-0.188"
                           Text="Contraseña"
                           FontSize="15px"
                           FontWeight="Bold">

                </TextBlock>

                <TextBox x:Name="ContraseñaText" VerticalAlignment="Top" Margin="491,241,260,0" Height="18px
                         "/>
                </Grid>
            
            
        </Grid>
    </Border>

</Window>
